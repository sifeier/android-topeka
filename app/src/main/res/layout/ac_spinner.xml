<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.google.samples.apps.topeka.me.ColorTextView
            android:id="@+id/color_tv"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:text="@string/long_string"
    />

    <com.google.samples.apps.topeka.widget.MaterialSpinner
            android:id="@+id/spinner_menu_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownSelector="@color/text_dark"/>

    <com.rey.material.widget.Spinner
            android:id="@+id/material_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"/>

    <com.google.samples.apps.topeka.me.ExpandableTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/expand_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxCollapsedLines="2"
            app:animDuration="200">

        <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/long_string"
                android:textSize="16sp"/>

        <View
                android:id="@+id/expand_cover"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#AAFFFFFF"
                android:visibility="gone"
                android:layout_alignBottom="@id/expandable_text"/>

    </com.google.samples.apps.topeka.me.ExpandableTextView>
</LinearLayout>