<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试BinderThread!"/>

    <Button
            android:id="@+id/binder_sennsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SensorManager"/>

    <Button
            android:id="@+id/binder_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NotificationManager"/>

    <Button
            android:id="@+id/binder_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DownloadManager"/>


    <com.google.samples.apps.topeka.tab.PagerSlidingTabStrip
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    <com.buke.view.RemindView
            android:id="@+id/remind_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="15dp"
            android:minHeight="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_margin="24dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/msg_red_dot"
            tools:text="New"
            app:enable="true"
            app:limitVersion="1.0"
            app:remindId="biz_module"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRemindButtonClick"/>

    <com.google.samples.apps.topeka.widget.MaterialSpinner
            android:id="@+id/spinner_menu_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownSelector="@color/text_dark"/>

    <com.rey.material.widget.Spinner
            android:id="@+id/material_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"/>

    <com.buke.view.ExpandableTextView
            android:id="@+id/expand_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxCollapsedLines="2"
            app:animDuration="200">

        <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/long_string"
                android:textSize="16sp"/>

        <View
                android:id="@+id/expand_cover"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#AAFFFFFF"
                android:visibility="gone"
                android:layout_alignBottom="@id/expandable_text"/>
    </com.buke.view.ExpandableTextView>

</LinearLayout>